# === Core ===
DEBUG=true
ALLOWED_HOSTS=*

# === Database (used by docker-compose) ===
POSTGRES_HOST=db
POSTGRES_DB=clipai
POSTGRES_USER=clipai
POSTGRES_PASSWORD=clipai
POSTGRES_PORT=5432

# === Celery/Redis (compose 服务名) ===
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# === Security & Feature toggles ===
ENCRYPTION_KEY=change_me_to_a_32_urlsafe_base64_key
WEBHOOKS_ENABLED=false

# === JWT（可选） ===
ACCESS_TOKEN_LIFETIME_DAYS=7
REFRESH_TOKEN_LIFETIME_DAYS=7

# === Providers OAuth/App Secrets (按需填写) ===
# Twitter (X)
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# Facebook/Instagram（同一 App 管理）
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_VERIFY_TOKEN=

# 其它（自定义代理/基础URL等）
OPENAI_BASE_URL=
OPENAI_API_KEY=